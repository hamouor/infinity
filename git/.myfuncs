#!/bin/bash
#
# gcc compilation aliases: c89, c99, debug mode, release mode
alias gd='gcc -ansi -pedantic-errors -Wall -Wextra -g'
alias gc='gcc -ansi -pedantic-errors -Wall -Wextra -DNDEBUG -O3'
alias gd9='gcc -std=c99 -pedantic-errors -Wall -Wextra -g'
alias gc9='gcc -std=c99 -pedantic-errors -Wall -Wextra -DNDEBG -O3'
alias gz='gcc -c'
#
# Valgrind alias
alias vlg='valgrind --leak-check=yes --track-origins=yes'
#
# Cpp alias
alias pd='g++ -std=c++98 -pedantic-errors -Wall -Wextra -Werror -g'
alias pdw='g++ -std=c++98 -pedantic-errors -Wall -Wextra -g'
alias pc='g++ -std=c++98 -pedantic-errors -Wall -Wextra -DNDEBUG -O3'
alias pc11='g++ -std=c++11 -pedantic-errors -Wall -Wextra -DNDEBUG -O3'
alias pd11='g++ -std=c++11 -pedantic-errors -Wall -Wextra -Werror -g'

alias cld='clang -std=c++98 -pedantic-errors -Wall -Wextra -Werror -g'
alias cldw='clang -std=c++98 -pedantic-errors -Wall -Wextra -g'
alias clc='clang -std=c++98 -pedantic-errors -Wall -Wextra -DNDEBUG -O3'
alias clc11='clang -std=c++11 -pedantic-errors -Wall -Wextra -DNDEBUG -O3'